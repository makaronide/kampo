<div data-role="page" tabindex="0" class="ui-page ui-page-theme-a ui-page-active" style="">
	<div id="obg_wrapper">
		<div id="obg_body" style="background:url(<%= asset_path 'bg01.gif' %>) repeat center top">
			<div id="survey_top">
				<div role="heading" class="q_wrapper">
					<legend>
						<span class="q_nmu">Q1</span>
