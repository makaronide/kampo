					</legend>
				</div>
				<div id="q_body">
					<div class="options">

						<% @conditions.each do |condition| %>
						<div class="row">
							<%= link_to "/survey/" + "#{condition.id}" + "/" + "#{@question_id}", class: 'js_survey_content_link' do %>
					  		<div class="option"><%= condition.name %></div>
							<% end %>
						</div>
						<% end %>

					</div>
				</div>
			</div>
		</div>
		<footer>
